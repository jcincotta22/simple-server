{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "lib": ["es2020"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,

    /* additional strict type checks */
    "strict": false /* turns all strict options on */,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": false /* want to ignore in tests */,
    "strictBindCallApply": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false /* typeorm makes this difficult */
  },
  "exclude": ["node_modules"]
}
